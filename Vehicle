class Vehicle {
    String brand;
    int speed;

    public void display() {
        System.out.println("Brand: " + brand + ", Speed: " + speed);
    }
}

class Car extends Vehicle {
    int doors;
    public void carInfo() {
        System.out.println("Car with " + doors + " doors");
    }
}

class Bike extends Vehicle {
    boolean hasGear;
    public void bikeInfo() {
        System.out.println("Bike with gear: " + hasGear);
    }
}


public class VehicleSystem {
    public static void main(String[] args) {
        Car c = new Car();
        c.brand = "Toyota";
        c.speed = 120;
        c.doors = 4;
        c.display();
        c.carInfo();

        Bike b = new Bike();
        b.brand = "Honda";
        b.speed = 80;
        b.hasGear = true;
        b.display();
        b.bikeInfo();
    }
}
